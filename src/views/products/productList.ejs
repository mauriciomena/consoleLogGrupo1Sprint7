<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head') %> 
    <link rel="stylesheet" href="/css/productList1.css">

</head>

<body>
    <%- include ('../partials/header') %> 
    <main class="main-list">
        <a class="new" href="/products/create">+</a>
        <section class="list">

            <% products.forEach(product => { %>
                <article>
                    <div class="image">
                        <% for( let i = 0; i < product.images.length; i++ ) { %>
                            <img src="/img/<%=product.images[i].name%>" alt="<%=product.images[i].name%>" class="product-image">
                        <% } %>
                    </div>               
                    <div class="data">
                        <div class="edit">
                            <!-- <a href="/products/<%= product.id%>/edit"><%= product.name %>   <i class="fas fa-edit"></i></a> -->
                            <a href="/products/<%= product.id%>"><%= product.name %>   <i class="fas fa-edit"></i></a>
                        </div>
                        
                        <p>
                            <b>Precio por KG: $</b>
                            <%= product.price %> 
                        </p>
                        
                        <div class="description">
                            <p>Descripción:<%= product.description%></p>
                            <br>
                            <p>Informacion Nutricional:<%= product.facts%></p>
                        </div>
                        <br>
                        Categoría:<%= product.categories.name%></p>                   
                    </div>                        
                </article>
            <% }); %>
        </section>
    </main>
    <%-include('../partials/footer')%>
</body>

</html>